<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
  <link rel="stylesheet" href="/stylesheets/bootstrap.css">
</head>

<body>
  <main>
    {{!-- <div class="alert">message flash</div> --}}
    <div class="container text-center">
      <div class="input-group input-group-lg mb-3">
        <input type="text" class="form-control" placeholder="input website URL here" aria-label="original URL"
          aria-describedby="button-addon2">
        <button class="btn btn-primary" type="submit" id="button-addon2">Shorten</button>
      </div>
      <div class="input-group input-group-lg mb-3">
        <input type="text" class="form-control" placeholder="Short website URL will be displayed here" value="nothing"
          id="copy" aria-label="shorten URL" aria-describedby="button-addon2">
        <button onclick="copy()" class="btn btn-outline-primary" type="button" id="button-addon2">Copy it!</button>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
  <script>
    function copy () {
      document.querySelector("#copy").select()
      document.execCommand('copy')
    }    
  </script>
</body>

</html>