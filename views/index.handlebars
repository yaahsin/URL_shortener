<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
</head>

<body>
  <main>
    <div class="container text-center " style="max-width:500px;">
      <form action="/shorten" method="POST">
        <div class="input-group input-group-lg mb-2">
          <input type="text" name="original" value="{{original}}" class="form-control"
            placeholder="Input website URL here" aria-label="original URL" aria-describedby="button-addon2">
          <button class="btn btn-primary" type="submit" id="button-addon2">Shorten</button>
        </div>
      </form>
      <div class="input-group input-group-lg mb-3">
        <input type="text" name="shorten" class="form-control" placeholder="Short website URL here" value="{{shorten}}"
          id="copy" aria-label="shorten URL" aria-describedby="button-addon2">
        <button onclick="copy()" class="btn btn-outline-primary" type="button" id="button-addon2">Copy it!</button>
      </div>
      <a href="/">
        <button type="button" class="btn btn-success btn-lg">reset</button>
      </a>
    </div>
  </main>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
  <script>
    function copy () {
      document.querySelector("#copy").select()
      document.execCommand('copy')
    }    
  </script>
</body>

</html>